@model Assignment_task_2.Models.BookingModel
<!DOCTYPE html>
<html>
<head>
    <title>Booking Details</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">

    <style>
        :root {
            --primary-hue: 180; /* Initial hue value */
        }

        .border {
           
            background: linear-gradient(180deg, hsl(var(--primary-hue), 100%, 80%), hsl(calc(var(--primary-hue) + 180), 100%, 80%));
        }

        .heding{
            margin-top:40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="border p-4 ">
            <h2 class="heding text-center"> Booking Information</h2>
       
            <h4>Customer Details:</h4>
            <div class="row mt-3 ml-5">
                <div class="col-7">
                    <p class="texcol">Customer Name : <span>@Model.CustomerName</span></p>
                    <p class="texcol">Email : <span>@Model.CustomerEmail</span></p>

                </div>
                <div class="col-5">
                    <p class="texcol">Phone Number : <span>@Model.CustomerNumber</span></p>
                </div>
            </div>
            <hr />

            <h4>Booking Details:</h4>
            <div class="row mt-3 ml-5">
                <div class="col-7">
                    <p class="texcol">Ground Name : <span>@Model.GroundName</span></p>
                    <p class="texcol">Booking Date : <span>@Model.Date</span></p>
                </div>
                <div class="col-5">
                    <p class="texcol">Address  : <span>@Model.Location</span></p>
                    <p class="texcol">Booking Time : <span>@Model.Time</span></p>
                </div>
            </div>
            <hr />

            <form id="cancelForm" class="mt-3">
                <div class="form-group">
                    <b><label>Reason for Booking cancellation  :</label> </b>
                    <input type="text" class="form-control" id="confirmation" placeholder="Reason for Booking cancellation" required>
                </div>
               
                <h5>Total price : <span id="totalAmount">@Model.Price</span> /-</h5>
                <a class="btn btn-danger" onclick="cancelbook('@Model.Id')">Cancel Booking</a>
            </form>
        </div>
    </div>
    <script>
        function cancelbook(id) {
            $.ajax({
                type: "POST",
                url: "/Add/cancelForm",
                data: { id: id},
                success: function (response) {
                    alert("Booking cancelled successfully");
                    window.location.href = '/Add/HomeIndex';
                    //window.location.reload();
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }
    </script>
</body>
</html>
