</head>
 <body>
  

    <div class="head py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder ml-5">Best Truf Ground's in Bhopal</h1>
                <p class="lead fw-normal text-white-50 ml-4 mb-0">Let's Play Bhopal</p>
            </div>
        </div>
    </div>

    <div id="listView"></div>

    <script type="text/x-kendo-tmpl" id="template">
        <div class="container">

            <div class="tops" style="border:1px solid;">
                 <dd class="top">
                        <img src="data:image/*;base64,#:image#" height="260" width="330" />
                    </dd>
                 <div class="detail"><br>
                      <h2 ><b>#:groundName#</b></h3>
                      <h5>#:location#</h5><br>
                    <a id="myButton" class="buttun btn btn-info"  href="/Add/MoreDetail/#:id#" >More Detail</a>
                </div>
        </div>
        </div>
        <hr>
    </script>



    <script>


        $(document).ready(function () {

            $("#listView").kendoListView({
                template: kendo.template($("#template").html()),
                dataSource: {

                    transport: {
                        read: {
                            url: "/Add/Showtruf/",
                            dataType: "json"
                        }

                    },

                    schema: {
                        model: {
                            id: "id",
                            fields: {
                                id: { type: "number" },
                                GroundName: { type: "string" },
                                Price: { type: "string" },
                                Description: { type: "string" },
                                Location: { type: "string" },
                                Image: { type: "string" }
                            }
                        }
                    }
                },
                layout: "grid",
                grid: {
                    cols: 6,
                    rows: 2
                },
            });

        });


    </script>
</body>
