    <title>Play Site</title>
    <style>
        body {
            
            background-origin: border-box;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            display: flex;
        }
        .header {
            margin-top: 92px;
            width: 1100px;
            height: 580px;
            margin-left:80px;
        }
        .image{
            margin-top:62px;
            width:1100px;
            height:480px;
            
        }
        .top{
            margin-top:20px;
            margin-left:10px;
            margin-bottom: 20px;
        }

        .tops {
            margin-top:30px;
        }

        .container{
            margin-left:10px;
        }
        .heading{
            background-color:lightskyblue;
            height:60px;
            text-align:center;


        }
        .detail {
            text-align:center;
            background-color:lightblue;
        }
        .buttun{
           
            margin-bottom:20px;
        }

        
        .social-links svg {
            width: 20px;
            height: 20px;
            color: var(--light-gray-color);
        }

            .social-links svg:hover {
                color: var(--primary-color);
            }

        .social-links li {
            padding-right: 30px;
        }

        .head{
            width:1265px;
            background-color:forestgreen;
        }
