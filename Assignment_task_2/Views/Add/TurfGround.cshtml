
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
   
  
    
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">

    <title>Play Site</title>
    <style>

        :root {
            --primary-hue: 180; /* Initial hue value */
        }

        body {
            background-origin: border-box;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            display: flex;
            background: linear-gradient(180deg, hsl(var(--primary-hue), 100%, 80%), hsl(calc(var(--primary-hue) + 180), 50%, 80%));
        }


        .border {
            
        }
        .header {
            margin-top: 92px;
            width: 1100px;
            height: 580px;
            margin-left: 80px;
        }

        .container {
            margin-left: 25px;
        }

        .heading {
            background-color: lightskyblue;
            height: 60px;
            text-align: center;
        }

        .head {
            width: 1265px;
            background-color: forestgreen;
        }

        .details {
            margin-top:80px;
        }
    </style>
</head>
<body>
    <div class="head py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder ml-5">Best Truf Ground's in Bhopal</h1>
                <p class="lead fw-normal text-white-50 ml-4 mb-0">Let's Play Bhopal</p>
            </div>
        </div>
    </div>
    <div class="container row">
        @foreach (var ground in Model)
        {
            <div class="col-6 mt-5">
                <img src="data:image/png;base64,@Convert.ToBase64String(ground.Image)" alt="Product Image" style="height: 350px; width: 500px; margin-top:8px; margin-right:30px;">
            </div>
            <div class="col-6 details">
                <h3 class="mt-2" id="GName" style="margin-left:75px;">Ground Name - @ground.GroundName</h3>
                <h5 style="margin-left:75px;">Ground Details - @ground.Description</h5>
                <h5 style="margin-left:75px;">Location - @ground.Location</h5>

                <h5 style="margin-left:75px;">Price - @ground.Price /-</h5>
                <h5 style="color:limegreen; margin-left:75px;">Let's Play</h5>
                <a style="margin-left:180px;" class="mt-4 btn btn-primary" href="MoreDetail?id=@ground.Id">More Details</a>
            </div>
        }
    </div>
</body>
</html> 