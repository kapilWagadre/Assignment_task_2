@model Assignment_task_2.Models.Ground
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            padding: 20px;
        }

        .color {
            color: white;
        }

        .heading {
            margin-top: 50px;
        }

        .card {
            max-width: 450px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .center {
            text-align: center;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        h3 {
            text-align: center;
            background-color: plum;
            padding: 10px;
            border-radius: 10px;
        }

        label {
            font-weight: bold;
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        .btn-info {
            margin-top: 10px;
        }
    </style>

</head>
<body>
   

    <h3 class="heading"><b>Add Ground Details</b></h3>

    <div class="card">
        <form asp-controller="Admin" asp-action="ViewData" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="GroundName">Ground Name:</label>
                <input asp-for="GroundName" name="GroundName" class="form-control" placeholder="Enter Ground Name" required="true">
            </div>

            <div class="mb-3">
                <label for="Description">Description:</label>
                <input asp-for="Description" name="Description" class="form-control" placeholder="Enter Ground Description" required="true"></input>
            </div>

            <div class="mb-3">
                <label for="Location">Location:</label>
                <input asp-for="Location" name="Location" class="form-control" placeholder="Enter Ground Location" required="true">
            </div>

            <div class="mb-3">
                <label for="Price">Price:</label>
                <input asp-for="Price" name="Price" class="form-control" type="number" placeholder="Enter Ground Price" required="true">
            </div>

            <div class="mb-3">
                <label for="Image">Image:</label>
                <input asp-for="Image" name="Image" class="form-control" type="file" required="true">
            </div>

            <div class="center">
                <button class="btn btn-success" type="submit">Add Ground</button><br />
                <!-- Assuming the following route exists for displaying the view -->
                <a href="/Admin/AdminHome" class="btn btn-info" role="button">Show View</a>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
